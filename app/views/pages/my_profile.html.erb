<div class="container">
  <div class="details-profile">
    <h5 class="pt-3">MY PROFILE</h5>
    <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, class: "rounded-circle picture opacity-100"%>
    <% else %>
      <%= image_tag "https://www.filosofie.nl/app/uploads//2020/06/camus-filosoof.jpg", class: "rounded-circle img" %>
    <% end %>
    <div class="pt-2">
      <%= link_to "Edit my profile", edit_user_registration_path, class:"profile-link button-green-shadow"%>
    </div>
    <div class="small-details-profile">
      <p>FIRST <span style="color: #6C27FF"><%= current_user.first_name.upcase%></span> LAST <span style="color: #6C27FF"><%= current_user.last_name.upcase%></span></p>
      <p>EMAIL <span style="color: #6C27FF"><%= current_user.email.upcase%></span></p>
      <p>PHONE NUMBER <span style="color: #6C27FF"><%= current_user.phone_number %></span></p>
      <p>HOME ADDRESS <span style="color: #6C27FF"><%= current_user.address %></span></p>
    </div>
  </div>
</div>

<p class="d-none my-target"><%= session[:status] %></p>
